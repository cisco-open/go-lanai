        {{- $noResponses := not $operation.Data.Responses }}
        {{- $hideStatus := or $noResponses $defaultResponseIs200 }}
        func (c * {{ $controllerName }}) {{toTitle $operation.Name}}(ctx context.Context{{ if $importedStructName }}, req {{$importName}}.{{toTitle $importedStructName}}{{- end}}) ({{if not $hideStatus}} int, {{- end }}interface{}, error) {
            return {{if not $hideStatus}} 501, {{- end }}nil, nil
        }

    {{- end }}
