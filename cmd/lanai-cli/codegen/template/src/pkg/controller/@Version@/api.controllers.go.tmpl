        return []web.Mapping{
        {{- with $pathData }}
            {{- range $opName, $opData := pathOperations . }}
                {{- $operation :=  concat $nameFromPath $opName | operation $opData }}
            rest.
                New("{{ mappingName $pathName $opName }}").
                {{$opName}}("{{ mappingPath $pathName }}").
                EndpointFunc(c.{{toTitle $operation.Name}}).
                Build(),
            {{- end }}
        {{- end }}
